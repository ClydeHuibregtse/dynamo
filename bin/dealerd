#!/bin/bash
# --------------------------------------------------------------------------------------------------
# Process to run dealer periodically.
#
# v1.0                                                                       Y.Iiyama (Apr 19, 2016)
# --------------------------------------------------------------------------------------------------

# initialize environment variables
source /usr/local/dynamo/etc/profile.d/init.sh

while [ 1 ]
do

  # make sure the log directory exists
  mkdir -p $DYNAMO_LOGDIR
  
  # generate specific log file
  TAG=`date "+%s"`
  LOG=$DYNAMO_LOGDIR/dealer-${TAG}.log
  
  if [ $(du -mc $DYNAMO_LOGDIR/dealer-* | awk '/total/ {print $1}') -gt 10000 ] # logs exceeding 10 GB
  then
    find $DYNAMO_LOGDIR -name dealer-* -mtime 1 -delete
  fi
  
  $DYNAMO_BASE/bin/dealer --log-level INFO --log-file $LOG --repeat 10 $DYNAMO_DEALER_INTERVAL

done

exit 0
